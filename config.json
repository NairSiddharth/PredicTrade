{
  "data_sources": {
    "google_trends": {
      "enabled": true,
      "timeframe": "today 3-m",
      "category": 7,
      "geo": "US",
      "gprop": "",
      "us_weight": 0.7,
      "world_weight": 0.3,
      "us_share_of_global_searches": 0.27,
      "multirange_enabled": false,
      "regional_analysis_enabled": true,
      "resolution": "COUNTRY"
    },
    "sentiment_analysis": {
      "enabled": true,
      "news_days_back": 7,
      "max_news_articles": 20,
      "sentiment_weights": {
        "google_trends": 0.35,
        "news_sentiment": 0.30,
        "finnhub_sentiment": 0.20,
        "market_context": 0.15
      }
    },
    "fear_greed_index": {
      "enabled": true,
      "sentiment_only": true,
      "classification_thresholds": {
        "extreme_fear": 25,
        "fear": 45,
        "neutral": 55,
        "greed": 75
      }
    },
    "stock_prices": {
      "enabled": true,
      "default_period": "1y"
    },
    "financial_ratios": {
      "enabled": true,
      "ratios": ["price_to_fcf", "price_to_earnings", "price_to_book"]
    }
  },
  "machine_learning": {
    "test_size": 0.3,
    "random_state": 42,
    "models": {
      "random_forest": {
        "n_estimators": 500,
        "random_state": 42
      }
    }
  },
  "logging": {
    "level": "INFO",
    "log_file": "stock_predictor.log",
    "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "data_storage": {
    "cache_enabled": true,
    "cache_duration_hours": 24,
    "data_directory": "data"
  },
  "api_settings": {
    "request_timeout": 30,
    "retry_attempts": 3,
    "rate_limit_delay": 2.0,
    "rate_limit_cooldown": 60.0,
    "max_requests_per_session": 100
  }
}